{% extends 'base.html.twig' %}

{% block navbar %}
    {% include './component/_navbar.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container bg-light p-3">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div >
     <form action="{{ path('login') }}" method="post" class="d-flex flex-column w-50 my-3">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}">

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password">

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}

            <button type="submit" class="btn btn-primary my-3">Se connecter</button>
        </form>

        </div>
            <span>Pas encore inscrit ? <span>
            <a class="btn btn-primary">S'inscrire</a>
        <div>
    </div>
       
    </div>
{% endblock %}
