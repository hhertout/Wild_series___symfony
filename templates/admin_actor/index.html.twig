{% extends 'crud.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
<div class="container bg-light">
<h4>Actor index</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    <a class="w-100 h-100 btn bg-primary text-subtitle my-2 p-3" href="{{ path('app_admin_actor_show', {'id': actor.id}) }}">show</a>
                    <a class="w-100 h-100 btn bg-primary text-subtitle my-2 p-3" href="{{ path('app_admin_actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="w-100 h-100 btn bg-primary text-subtitle my-2 p-3" href="{{ path('app_admin_actor_new') }}">Create new</a>
</div>
    
{% endblock %}
