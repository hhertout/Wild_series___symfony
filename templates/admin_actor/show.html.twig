{% extends 'crud.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h4>Actor</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}" width="200" height="300" class="cover"></td>
            </tr>
        </tbody>
    </table>

    <a class="w-100 h-100 btn bg-primary text-subtitle my-2 p-3" href="{{ path('app_admin_actor_index') }}">back to list</a>

    <a class="w-100 h-100 btn bg-primary text-subtitle my-2 p-3" href="{{ path('app_admin_actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('admin_actor/_delete_form.html.twig') }}
{% endblock %}
